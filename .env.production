# Production Environment Variables for WASM Torch
# WARNING: This file contains sensitive configuration - do not commit actual secrets

# Application Configuration
WASM_TORCH_ENV=production
WASM_TORCH_LOG_LEVEL=INFO
WASM_TORCH_DEBUG=false
WASM_TORCH_VERSION=1.0.0

# Server Configuration
WASM_TORCH_HOST=0.0.0.0
WASM_TORCH_PORT=8000
WASM_TORCH_WORKER_THREADS=4
WASM_TORCH_MAX_CONNECTIONS=1000

# Resource Limits
WASM_TORCH_MAX_MODEL_SIZE_MB=1000
WASM_TORCH_MEMORY_LIMIT_MB=2048
WASM_TORCH_TIMEOUT_SECONDS=300
WASM_TORCH_CACHE_SIZE_MB=256

# Security Configuration
WASM_TORCH_ENABLE_AUTH=true
WASM_TORCH_API_KEY_REQUIRED=true
WASM_TORCH_CORS_ENABLED=true
WASM_TORCH_CORS_ORIGINS=https://your-frontend-domain.com,https://api.your-domain.com

# File Paths
WASM_TORCH_MODEL_DIR=/app/models
WASM_TORCH_TEMP_DIR=/app/temp
WASM_TORCH_LOG_DIR=/app/logs
WASM_TORCH_CONFIG_DIR=/app/config

# Performance and Monitoring
WASM_TORCH_MONITORING_ENABLED=true
WASM_TORCH_METRICS_ENABLED=true
WASM_TORCH_HEALTH_CHECK_ENABLED=true
WASM_TORCH_PROFILING_ENABLED=false

# External Services (replace with actual values)
DATABASE_URL=postgresql://username:password@localhost:5432/wasmtorch
REDIS_URL=redis://localhost:6379/0
METRICS_ENDPOINT=http://prometheus:9090

# API Keys and Secrets (replace with actual values)
WASM_TORCH_API_KEY=your-production-api-key-here
WASM_TORCH_SECRET_KEY=your-secret-key-for-jwt-signing
DATABASE_PASSWORD=your-database-password
REDIS_PASSWORD=your-redis-password

# TLS/SSL Configuration
WASM_TORCH_TLS_ENABLED=true
WASM_TORCH_TLS_CERT_PATH=/etc/ssl/certs/wasmtorch.crt
WASM_TORCH_TLS_KEY_PATH=/etc/ssl/private/wasmtorch.key

# Load Balancing and Scaling
WASM_TORCH_ENABLE_LOAD_BALANCER=true
WASM_TORCH_HEALTH_CHECK_INTERVAL=30
WASM_TORCH_SCALE_MIN_REPLICAS=2
WASM_TORCH_SCALE_MAX_REPLICAS=10

# Backup and Recovery
WASM_TORCH_BACKUP_ENABLED=true
WASM_TORCH_BACKUP_SCHEDULE=0 2 * * *
WASM_TORCH_BACKUP_RETENTION_DAYS=30