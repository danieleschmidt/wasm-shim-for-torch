# Environment Configuration for WASM Shim for Torch
# Copy this file to .env and customize as needed

# ================================
# Development Configuration
# ================================

# Python environment
PYTHONPATH=src/
PYTHON_VERSION=3.11

# Development flags
WASM_TORCH_DEBUG=0
WASM_TORCH_PROFILING=0
WASM_TORCH_TEST_MODE=0

# ================================
# Build Configuration
# ================================

# Emscripten configuration
EMSCRIPTEN_VERSION=3.1.61
EMSDK_PATH=/opt/emsdk
EM_CACHE=/tmp/emscripten-cache

# CMake configuration
CMAKE_BUILD_TYPE=Release
USE_SIMD=ON
USE_THREADS=ON
BUILD_TESTS=ON

# ================================
# Testing Configuration
# ================================

# PyTest configuration
PYTEST_ARGS=--cov=wasm_torch --cov-report=html --tb=short
PYTEST_WORKERS=auto

# Test database configuration (if needed)
TEST_DATABASE_URL=sqlite:///test.db

# Disable GPU for testing consistency
CUDA_VISIBLE_DEVICES=""

# ================================
# CI/CD Configuration
# ================================

# GitHub Actions
CI=false
GITHUB_TOKEN=""

# Coverage reporting
CODECOV_TOKEN=""
COVERAGE_REPORT=xml

# ================================
# Security Configuration
# ================================

# API keys and tokens (keep these secret!)
PYPI_API_TOKEN=""
NPM_TOKEN=""

# Security scanning
BANDIT_CONFIG_FILE=pyproject.toml
SAFETY_API_KEY=""

# ================================
# Performance Configuration
# ================================

# Memory limits
WASM_MEMORY_LIMIT=4294967296  # 4GB
PYTHON_MEMORY_LIMIT=8589934592  # 8GB

# Threading
THREAD_POOL_SIZE=4
OMP_NUM_THREADS=4

# ================================
# Logging Configuration
# ================================

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Log files
LOG_FILE=wasm_torch.log
ERROR_LOG_FILE=errors.log

# ================================
# Docker Configuration
# ================================

# Container settings
CONTAINER_REGISTRY=ghcr.io
CONTAINER_NAME=wasm-shim-torch
CONTAINER_TAG=latest

# Docker Compose
COMPOSE_PROJECT_NAME=wasm-torch
COMPOSE_FILE=docker-compose.yml

# ================================
# Documentation Configuration
# ================================

# Sphinx settings
DOCS_BUILD_DIR=docs/_build
DOCS_SOURCE_DIR=docs/
DOCS_PORT=8000

# ================================
# Profiling and Monitoring
# ================================

# Performance monitoring
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=profiles/

# Memory profiling
MEMORY_PROFILER_BACKEND=psutil
PROFILE_MEMORY=false

# ================================
# Browser Testing Configuration
# ================================

# Browser testing (Playwright/Selenium)
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Supported browsers
TEST_BROWSERS=chromium,firefox,webkit

# ================================
# Deployment Configuration
# ================================

# Deployment environment
DEPLOYMENT_ENV=development
DEPLOYMENT_URL=http://localhost:8080

# CDN settings
CDN_URL=https://cdn.jsdelivr.net/npm/wasm-torch@latest/dist/

# ================================
# External Service Configuration
# ================================

# HuggingFace (for model testing)
HUGGINGFACE_TOKEN=""
HUGGINGFACE_CACHE_DIR=~/.cache/huggingface

# S3 (for artifact storage)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=""

# ================================
# Analytics and Telemetry
# ================================

# Disable analytics during development
DO_NOT_TRACK=1
DISABLE_TELEMETRY=1

# Analytics configuration
ANALYTICS_ENDPOINT=""
ANALYTICS_KEY=""

# ================================
# Experimental Features
# ================================

# Enable experimental features
ENABLE_WEBNN=false
ENABLE_WEBGPU_HYBRID=false
ENABLE_STREAMING_INFERENCE=false

# Feature flags
FF_ADVANCED_QUANTIZATION=false
FF_DISTRIBUTED_TRAINING=false
FF_MODEL_COMPRESSION=false

# ================================
# Local Development Overrides
# ================================

# Override any settings for local development
# These won't be committed to version control

# Local paths
LOCAL_MODEL_DIR=./models/
LOCAL_DATA_DIR=./data/
LOCAL_CACHE_DIR=./.cache/

# Development server settings
DEV_SERVER_HOST=localhost
DEV_SERVER_PORT=3000
DEV_SERVER_RELOAD=true